#sidebar
  @media mq-normal
    column(sidebar-column)

.widget-wrap
  margin: block-margin 0

.widget-title
  @extend $block-caption

.widget
  color: color-sidebar-text
  padding: 5px
  a
    color: color-link
    text-decoration: none
    &:hover
      color: #fff;
      background-color: #825d5b;
  ul, ol, dl
    ul, ol, dl
      margin-left: 15px
      list-style: disc
